<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="true" />
	<constant name="struts.objectFactory" value="spring" />

	<package name="default" namespace="/" extends="json-default">

		<action name="*_*" class="{1}Action" method="{2}">
			<result name="{2}">index.jsp</result>
			<result	type="json">
				<param name="root">usersinfo1</param>
			</result>
			<result name="loginFail" type="redirect">page/login.jsp</result>
			<result name="listAll" type="redirect">page/index.jsp</result>
		</action>
		
		
		<action name="findAll" class="productAction" method="findAll">
			<result name="success">product.jsp</result>
		</action>

		<action name="findByDate" class="productAction" method="findByDate"></action>
		
		<action name="findByPriceDesc" class="productAction" method="findByPriceDesc"></action>

		<action name="findByType" class="productAction" method="findByType"></action>
		
		<action name="findByPrice" class="productAction" method="findByPrice"></action>
		
		<action name="findByPage" class="productAction" method="findByPage">
			<result	type="json">
				<param name="root">pageList</param>
			</result>
		</action>
	</package>
</struts>
